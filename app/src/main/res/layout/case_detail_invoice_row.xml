<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginTop="5dp"
    android:background="#80B3FF"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@color/graySeparator"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tCaseInvoiceDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8sp"
                android:layout_weight="1"
                android:text="12 May 2015"
                android:textColor="@color/primary_material_dark"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tCaseInvoiceAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="8sp"
                android:layout_weight="2"
                android:text="250.000 RO"
                android:textColor="#A2122F"
                android:textSize="16dp"
                android:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:id="@+id/tCaseInvoiceComments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="Comments"
            android:textColor="@color/primaryColor"
            android:textSize="14sp" />

    </LinearLayout>

</android.support.v7.widget.CardView>