<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginTop="5dp"
    android:background="#80B3FF"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="8dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#A2122F" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="#FFC2CE"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tMonth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="15dp"
                android:text="January"
                android:textStyle="bold"
                android:textColor="#A2122F"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/tTotal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="#A2122F"
                android:text="250 RO"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                android:layout_weight="1"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#FD6E8A" />

        <LinearLayout
            android:id="@+id/panel1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tSalary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/accentColor"
                android:gravity="center_horizontal"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/tSalaryAllowance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/accentColor"
                android:gravity="center_horizontal"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/tOtherAllowance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/accentColor"
                android:gravity="center_horizontal"
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp">

            <TextView
                android:id="@+id/tEmpInsurrance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/accentColor"
                android:gravity="center_horizontal"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/tCompanyInsurrance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/accentColor"
                android:gravity="center_horizontal"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/tCaseAllowance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/accentColor"
                android:gravity="center_horizontal"
                android:layout_weight="1"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FD6E8A" />

        <TextView
            android:id="@+id/tRemarks"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:textColor="#A2122F"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</android.support.v7.widget.CardView>
