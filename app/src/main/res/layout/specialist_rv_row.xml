<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView android:id="@+id/tSpecialistCode" android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:layout_gravity="center_vertical"
            android:layout_weight="3" android:gravity="left" android:padding="8dp"
            android:text="client code" android:textAlignment="center" android:textColor="#000" />

        <TextView android:id="@+id/tSpecialistCodeEn" android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp" android:layout_weight="1" android:gravity="right"
            android:padding="8dp" android:text="client name" android:textAlignment="center"
            android:textColor="#000" />

    </LinearLayout>

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView android:id="@+id/tSpecialistArea" android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp" android:layout_weight="2" android:gravity="left"
            android:padding="8dp" android:text="GSM" android:textAlignment="center"
            android:textColor="#000" />

        <TextView android:id="@+id/tSpecialistActive" android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp" android:layout_weight="1" android:gravity="right"
            android:padding="8dp" android:text="contact person" android:textAlignment="center"
            android:textColor="#000" />

    </LinearLayout>


</LinearLayout>